@{
    ViewBag.Title = "Battle";
    int index = 1;
}
@model NeoSteam.Model.UserOfficer

<div class="container">
    <div class="col-md-8">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">战斗日志</div>
            <div class="panel-body">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand txt_bm" href="#">1. 荣耀P7 攻击了 下水道老鼠 1 次，造成了8伤害</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <p class="navbar-text navbar-right"><a href="#" class="navbar-link">2015/7/7 3:27:37</a></p>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand txt_bm" href="#">2. 荣耀P7 攻击了 下水道老鼠 1 次，造成了8伤害</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <p class="navbar-text navbar-right"><a href="#" class="navbar-link">2015/7/7 3:27:37</a></p>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default">Fight</button>
            <button type="button" class="btn btn-default">Stop</button>
        </div>
    </div>

    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
        <div class="sidebar-module">
            <h4>阵容</h4>
            <ol class="list-unstyled">
                @foreach (var item in Model.UserOfficerList)
                {
                    decimal nowblood = 80;
                    decimal allblood = decimal.Parse(@item.Blood);
                    decimal width_blood = decimal.Parse((nowblood / allblood * 100).ToString("0.00"));
                    
                    <li><a href="#">#@index. @item.Offname Lv.@item.Off_Level</a><div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @width_blood%;">
                           @nowblood
                        </div>
                    </div>
                    </li>
                    
                    index++;
                }
            </ol>
        </div>
        <div class="sidebar-module sidebar-module-inset">
            <h4>About</h4>
            <p>Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
        </div>
        <div class="sidebar-module">
            <h4>Elsewhere</h4>
            <ol class="list-unstyled">
                <li><a href="#">GitHub</a></li>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">Facebook</a></li>
            </ol>
        </div>
    </div>
</div>
