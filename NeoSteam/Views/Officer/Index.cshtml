@{
    ViewBag.Title = "武将列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model NeoSteam.Controllers.OfficerController.blogModel

<div class="container">

    <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
            <h2 id="tables-hover-rows">武将列表</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>武将</th>
                        <th>星级</th>
                        <th>属性</th>
                        <th>职业</th>
                        <th>攻</th>
                        <th>血</th>
                        <th>速</th>
                        <th>闪</th>
                        <th>暴</th>
                        <th>技</th>
                        <th>介绍</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.types)
                    { 
                        <tr>
                            <td>@item.Offid</td>
                            <td>@item.Offname</td>
                            <td>
                                @for (int i = 0; i < int.Parse(item.Star); i++){<span class="glyphicon glyphicon-star-empty"></span> }
                            </td>
                            <td>@item.Attribute</td>
                            <td>@item.Profession</td>
                            <td>@item.Attack</td>
                            <td>@item.Blood</td>
                            <td>@item.Speed</td>
                            <td>@Html.DisplayFor(m => item.Miss)</td>
                            <td>@Html.DisplayFor(m => item.Crit)</td>
                            <td>@Html.DisplayFor(m => item.Skill)</td>
                            <td>@Html.DisplayFor(m => item.Introduction)</td>
                        </tr>
                    }
                </tbody>
            </table>
            @RenderPage("~/views/controls/pagebar.cshtml", new { pageindex = Model.posts.PageIndex, pagecount = Model.posts.PageCount })
        </div>
        <!--/.col-xs-12.col-sm-9-->

        <div role="navigation" id="sidebar" class="col-xs-6 col-sm-3 sidebar-offcanvas">
            <div class="list-group">
                <a class="list-group-item active" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
                <a class="list-group-item" href="#">Link</a>
            </div>
        </div>
        <!--/.sidebar-offcanvas-->
    </div>
    <!--/row-->

</div>
