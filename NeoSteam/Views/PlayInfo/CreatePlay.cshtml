@{
    ViewBag.Title = "创建角色";
}
@model IDictionary<string,object>
<script>
    $(function () {
        $("#create_play").click(function () {
            var nickname = $("#_nickname").val().trim();
            var country = $("#_country").val();
            var race = $("#_race").val();
            var jobs = $("#_jobs").val();
            var sex = $("#_sex").val();

            $.ajax({
                url: '/PlayInfo/CreatePlay_New',
                dataType: "json",
                cache: false,
                data: {
                    nickname: nickname,
                    country: country,
                    race: race,
                    jobs: jobs,
                    sex:sex
                },
                type: "POST",
                beforeSend: function () { $(".help-block").html("创建中..."); },
                success: function (data) {
                    if(data.status>0)
                        $(".help-block").html('添加成功');
                    else
                        $(".help-block").html('添加失败');
                }
            });
            return false;
        });
    })
</script>

<div class="container">

    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-3">
            <h2 class="page-header">创建角色</h2>
            <form>
                <div class="form-group">
                    <label>角色名称</label>
                    <input type="text" class="form-control" id="_nickname" placeholder="角色名称">
                </div>
                <div class="form-group">
                    <label>国家</label>
                    <select class="form-control" id="_country">
                        @foreach (var item in (Global.BasedataStandardInfo[])Model["CountryList"])
                        {
                            <option value="@item.ID">@item.CNName</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <label>种族</label>
                    <select class="form-control" id="_race">
                        @foreach (var item in (Global.BasedataStandardInfo[])Model["RaceList"])
                        {
                            <option value="@item.ID">@item.CNName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>职业</label>
                    <select class="form-control" id="_jobs">
                        @foreach (var item in (Global.BasedataStandardInfo[])Model["JobsList"])
                        {
                            <option value="@item.ID">@item.CNName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>性别</label>
                    <select class="form-control" id="_sex">
                        @foreach (var item in (Global.BasedataStandardInfo[])Model["SexList"])
                        {
                            <option value="@item.ID">@item.CNName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-default btn-lg" id="create_play">创建</button>
                <p class="help-block"></p>
            </form>
        </div>
        <div class="col-xs-12 col-sm-9">
            <h2 class="page-header">介绍</h2>
        </div>
    </div>
</div>
